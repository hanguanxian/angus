<h1>Listing details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Addr</th>
      <th>Phone</th>
      <th>Defau</th>
      <th>Custom</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.name %></td>
        <td><%= detail.addr %></td>
        <td><%= detail.phone %></td>
        <td><%= detail.defau %></td>
        <td><%= detail.custom_id %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

