<div class="depot_form">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag({:controller => "sessions", :action => "mylogin"}, :method => "post") do%>
      <fieldset>
        <legend>请登录</legend>
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">用户名:</label>
          <div class="col-sm-6">
            <%= text_field_tag :name, params[:name], class:"form-control", 
                               placeholder:"用户名" %>
          </div>
        </div>
        <div class="clearfix row"></div>
        <div class="form-group">
          <label for="password" class="col-sm-2 control-label">密码:</label>
          <div class="col-sm-6">
            <%= password_field_tag :password, params[:password], class:"form-control", 
                               placeholder:"密码" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-3">
            <%= submit_tag "登陆", class:"btn btn-default pull-left" %>
            <%= link_to '注册', new_custom_path, class:"btn btn-default pull-right"%>
          </div>
        </div>
        
      </fieldset>
  <% end %>
</div>