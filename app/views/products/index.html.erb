<div id='product_list'>
 <div class="pull-left navbar-brand">产品列表</div>
 <%= link_to '添加产品', new_product_path, class:"pull-right btn btn-default" %>
 <div class="clearfix"></div>
 
<table class="table table-striped">

    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd','list_line_even') %>">
        <td>
          <%= image_tag(product.image_url, :class => 'list_image') %>
        </td>

        <td class= "list_description">
        <dl>
            <dt><%= product.title %></dt>
            <dd><%= truncate(strip_tags(product.description),
                     :length => 80) %> </dd>
        </dl>
        </td>
        <td><%= product.price %></td>
        <td class="list_actions">
        <%= link_to '查看', product %><br/>
        <%= link_to '编辑', edit_product_path(product) %><br/>
        <%= link_to '删除', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>

</table>

<%= will_paginate @productes, previous_label:"上一页", next_label:'下一页' %> 